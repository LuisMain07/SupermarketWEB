@page
@model SupermarketWeb.Pages.PayModes.IndexModel
@{
	ViewData["Tittle"] = "Index PayMode";
}
<h1>PayMode</h1>

<p>
    <a asp-page="/PayModes/Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @if (Model.PayMode != null && Model.PayMode.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.PayMode[0].Name)
                }
            </th>
            <th>
                @if (Model.PayMode != null && Model.PayMode.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.PayMode[0].Description)
                }
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PayMode != null && Model.PayMode.Count > 0)
        {
            foreach (var item in Model.PayMode)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No records found.</td>
            </tr>
        }
    </tbody>
</table>