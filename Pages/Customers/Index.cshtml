@page
@model SupermarketWEB.Pages.Customers.IndexModel
@{
    ViewData["Tittle"] = "Index Customers";
}
<h1>Customer</h1>

<p>
    <a asp-page="/Customers/Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.Customers[0].Document)
                }
            </th>
            <th>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.Customers[0].FirstName)
                }
            </th>
            <th>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.Customers[0].LastName)
                }
            </th>
            <th>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.Customers[0].Address)
                }
            </th>
<th>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.Customers[0].Birthday)
                }
            </th>
            <th>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.Customers[0].PhoneNumber)
                }
            </th>
            <th>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    @Html.DisplayNameFor(model => model.Customers[0].Email)
                }
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Customers != null && Model.Customers.Count > 0)
        {
            foreach (var item in Model.Customers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Document)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No records found.</td>
            </tr>
        }
    </tbody>
</table>